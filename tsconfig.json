{
  "compilerOptions": {
    "target": "ES2022",
    "noEmit": true,
    "strict": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "rootDir": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "noImplicitAny": true,
    "lib": [
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020",
      "ES2021",
      "DOM"
    ],
    "paths": {
      "~*": ["src/*"],
      "src/*": ["src/*"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/"],
  "include": ["src", "__mocks__"]
}
